<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<div class="signup-container">
				<h2 class="latolight text-center">Create New Account</h2>
				<%= form_for :user, url: '/users' do |f| %>
					<div class="form-group">
						<label class="sr-only">First Name</label>
						<%= f.text_field :first_name, class: 'form-control input-lg', placeholder: 'First Name' %>
					</div>
					<div class="form-group">
						<label class="sr-only">Last Name</label>
						<%= f.text_field :last_name, class: 'form-control input-lg', placeholder: 'Last Name'	 %>
					</div>
					<div class="form-group">
						<label class="sr-only">Email</label>
						<%= f.text_field :email, class: 'form-control input-lg', placeholder: 'Email' %>
					</div>
					<div class="form-group">
						<label class="sr-only">Password</label>
						<%= f.password_field :password, class: 'form-control input-lg', placeholder: 'Password' %>
					</div>
					<%= f.submit "Create Account", class: "btn btn-orange btn-lg" %>
				<% end %>
			</div>
		</div>
	</div>
</div>