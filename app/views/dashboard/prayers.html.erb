<%= render 'dashnav' %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2 class="latoblack underline">Prayer Requests</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<% if @prayers.present? %>
			<table class="table table-striped table-condensed">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
            <th>Phone</th>
            <th>Received</th>
						<th>&nbsp;</th>
					</tr>
				</thead>
				<tbody>
					<% for prayer in @prayers %>
					<tr>
						<td><p class="latobold"><%= prayer.full_name %></p></td>

						<td><p class="latobold"><%= prayer.email %></p></td>
            <td><p class="latobold"><%= prayer.phone %></p></td>
            <td><p class="latobold"><%= prayer.created_at.strftime('%B %-d, %Y') %></p></td>

						<td>
							<p class="latobold text-right">
								<%= link_to "View", dashboard_prayer_path(prayer) %> |
								<%= link_to "Delete", prayer, method: :delete %>
							</p>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<% else %>
				<h3 class="latolight">No prayer requests received.</h3>
			<% end %>
		</div>
	</div>
  
