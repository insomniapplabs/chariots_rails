<%= render 'dashnav' %>
<div class="dash-pg-container">

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2 class="latolight new-event-hdr">Add New Event</h2>
		</div>
	</div>
	<div class="row">
		
		<%= form_for Event.new do |f| %>
		<div class="col-md-8">
			<div class="form-group" id="eventTitle">
				<label class="sr-only">Title</label>
				<%= f.text_field :title, class: "form-control", placeholder: "Event Title" %>
			</div>
			<div class="form-group">
				<label class="sr-only">Description</label>
				<%= f.text_area :description, class: "form-control redactor", placeholder: "Add event details..." %>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group start_end_date" id="date_picker">
				<label class="sr-only">Event Start</label>
				<%= f.text_field :start_date, class: "form-control", placeholder: "Start Date" %>
			</div>
			<div class="form-group start_end_date" id="date_picker2">
				<label class="sr-only">Event Ending</label>
				<%= f.text_field :end_date, class: "form-control", placeholder: "End Date" %>
			</div>
		</div>
		
		


	</div>
	<div class="row">
		<div class="col-md-12">
			<%= f.submit "Add Event", class: "btn btn-orange" %>
		</div>
	</div>

	<% end %>
</div>

</div>