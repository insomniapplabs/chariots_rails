<%= render 'dashnav' %>

<div class="container">
	<div class="row">
		<div class="col-md-7">
			<h2 class="latobold">Events</h2>
			<% if @recent_events.blank? %>
				<h3 class="latolight">You have not created any events.</h3>
			<% end %>
		</div>
		<div class="col-md-5">
			<h3>Add New Event</h3>
			<%= form_for Event.new do |f| %>
				<div class="form-group">
					<label class="sr-only">Title</label>
					<%= f.text_field :title, class: "form-control", placeholder: "Event Title" %>
				</div>
				<div class="form-group">
					<label class="sr-only">Date</label>
					<%= f.text_field :date, class: "form-control", placeholder: "Event Date" %>
				</div>
				<div class="form-group">
					<label class="sr-only">Description</label>
					<%= f.text_area :description, class: "form-control redactor" %>
				</div>
				<%= f.submit "Create Event", class: "btn btn-orange" %>
			<% end %>
		</div>
	</div>
</div>