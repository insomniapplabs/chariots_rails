<div class="prayer-container">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-2 col-md-8">
				<h2 class="text-center latoblack">Prayer Request</h2>

			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-3 col-md-6">
				<p class="text-center latolight">Only the ministerial staff has access to read these.  Your request will always remain confidential.  If you would like us to contact you please let us know what form of correspondence you would prefer.</p>
				<%= form_for @prayer do |f| %>
					<div class="form-group">
						<label>Full Name</label>
						<%= f.text_field :full_name, class: "form-control" %>
					</div>
					<div class="form-group">
						<label>Email</label>
						<%= f.text_field :email, class: "form-control" %>
					</div>
					<div class="form-group">
						<label>Phone</label>
						<%= f.text_field :phone, class: "form-control" %>
					</div>
					<div class="form-group">
						<label>Prayer Request</label>
						<%= f.text_area :prayer_request, class: "form-control" %>
					</div>
					<%= f.submit "Submit Prayer Request", class: "btn btn-default" %>
				<% end %>
			</div>
		</div>
	</div>
</div>

